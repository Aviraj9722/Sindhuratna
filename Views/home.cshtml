@inject Umbraco.Cms.Core.IPublishedContentQuery ContentQuery
@{
    var root = ContentQuery.ContentAtRoot().FirstOrDefault();
    var homePage = root as Root;

}
@{
    Layout = "~/Views/Shared/_SindhuratnLayout.cshtml";
}
<style>

    .carousel-inner, .carousel-item, .carousel-img {
        height: 60vh !important;
        object-fit: cover;
    }

    @@media only screen and (min-width: 360px) and (max-width: 480px) {
        .carousel-overlay {
            position: absolute;
            top: 15px;
            left: 15px;
            z-index: 50;
        }

        .carousel-inner, .carousel-item, .carousel-img {
            height: 40vh !important;
            object-fit: cover;
        }
    }

    /* ===== Emergency Section ===== */
    .emergency-header {
        background: linear-gradient(135deg, #c62828, #ef5350);
        color: white;
        font-weight: 600;
        padding: 12px 16px;
        border-radius: 10px;
        text-align: center;
        font-size: 18px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.15);
        margin-bottom: 14px;
    }

    .emergency-header i {
        margin-right: 8px;
    }

    /* Grid */
    .emergency-grid {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    /* Card */
    .emergency-card {
        display: flex;
        align-items: center;
        gap: 14px;
        padding: 12px 14px;
        border-radius: 10px;
        color: #222;
        font-size: 14px;
        font-weight: 500;
        box-shadow: 0 3px 8px rgba(0,0,0,0.08);
        transition: 0.2s ease;
        cursor: pointer;
    }

        .emergency-card:hover {
            transform: translateY(-2px);
        }

        /* Icon */
        .emergency-card .icon {
            font-size: 20px;
            width: 38px;
            height: 38px;
            display: grid;
            place-items: center;
            border-radius: 8px;
            color: white;
        }

        /* Title */
        .emergency-card h4 {
            margin: 0;
            font-size: 15px;
            font-weight: 600;
        }

        .emergency-card span {
            font-size: 13px;
            color: #333;
        }

    /* Color Coding */

    .ambulance {
        background: #e3f2fd;
    }

        .ambulance .icon {
            background: #1976d2;
        }

    .police {
        background: #e8f5e9;
    }

        .police .icon {
            background: #2e7d32;
        }

    .fire {
        background: #ffebee;
    }

        .fire .icon {
            background: #c62828;
        }

    .tourist {
        background: #f3e5f5;
    }

        .tourist .icon {
            background: #6a1b9a;
        }

    .highway {
        background: #fff3e0;
    }

        .highway .icon {
            background: #ef6c00;
        }

    .national {
        background: #eceff1;
    }

        .national .icon {
            background: #37474f;
        }

    /* Mobile */
    @@media(max - width:768px) {
        .emergency-header

    {
        font-size: 16px;
    }

    }


    .tourism-card-Head
    {
        height:60vh !important;
        overflow: auto;
        /* Hide scrollbar – Chrome, Edge, Safari */
        scrollbar-width: none; /* Firefox */
        -ms-overflow-style: none; /* IE & Edge (legacy) */
    }
    .tourism-card {
       
        overflow: auto;
        /* Hide scrollbar – Chrome, Edge, Safari */
        scrollbar-width: none; /* Firefox */
        -ms-overflow-style: none; /* IE & Edge (legacy) */
    }

        .tourism-card::-webkit-scrollbar {
            display: none; /* Chrome, Safari */
        }

    h2 {
        font-size: 28px;
        font-weight: bold;
        position: relative;
    }

        h2 .orange {
            color: #f36f21;
        }

        h2 .underline {
            display: block;
            width: 80px;
            height: 4px;
            background: #f36f21;
            margin-top: 5px;
        }

    .text {
        color: #777;
        line-height: 1.7;
        margin-top: 15px;
        transition: max-height 0.3s ease;
    }

      

    .read-more {
        display: inline-block;
        margin-top: 10px;
        color: #f36f21;
        font-weight: bold;
        text-decoration: none;
        cursor: pointer;
    }

    .text.collapsed {
        max-height: 40vh !important;
        overflow: hidden;
    }

    /* ===== HOTEL CARD ===== */
    .hotel-card {
        border-radius: 12px;
        overflow: hidden;
        transition: 0.2s ease;
    }

    .hotel-img {
        height: 180px;
        object-fit: cover;
    }

    .hotel-card:hover {
        transform: translateY(-2px);
    }

    /* TITLE */
    .hotel-title {
        font-weight: 600;
        font-size: 16px;
        color: #2c3e50;
        margin-bottom: 6px;
    }

    /* TEXT */
    .hotel-text {
        font-size: 13px;
        color: #6c757d;
        margin-bottom: 4px;
    }

    /* BADGE */
    .hotel-badge {
        font-size: 12px;
        padding: 4px 10px;
        border-radius: 20px;
        width: fit-content;
    }

    /* BUTTON */
    .hotel-btn {
        border-radius: 6px;
        font-size: 13px;
    }

    /* Fix equal title height */
    .place-title {
        min-height: 48px; /* keeps all cards aligned */
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    /* Keep badge clean */
    .place-badge {
        width: fit-content;
        font-size: 12px;
        margin-top: 4px;
    }

    /* Optional: Make description equal height */
    .tourism-card .card-text {
        min-height: 60px;
    }

    /* ============================= */
    /* SCHEME SECTION ONLY STYLING  */
    /* ============================= */

    .scheme-section .scheme-card {
        border-radius: 12px;
        padding: 14px;
        transition: 0.2s ease;
        box-shadow: 0 3px 10px rgba(0,0,0,0.06);
        border-left: 4px solid transparent;
    }

        .scheme-section .scheme-card:hover {
            transform: translateY(-3px);
        }

    /* 1st scheme */
    .scheme-section .col-sm-12:nth-child(6n+1) .scheme-card {
        background: #e3f2fd;
        border-left-color: #1976d2;
    }

    /* 2nd scheme */
    .scheme-section .col-sm-12:nth-child(6n+2) .scheme-card {
        background: #e8f5e9;
        border-left-color: #2e7d32;
    }

    /* 3rd scheme */
    .scheme-section .col-sm-12:nth-child(6n+3) .scheme-card {
        background: #fff3e0;
        border-left-color: #ef6c00;
    }

    /* 4th scheme */
    .scheme-section .col-sm-12:nth-child(6n+4) .scheme-card {
        background: #fce4ec;
        border-left-color: #c2185b;
    }

    /* 5th scheme */
    .scheme-section .col-sm-12:nth-child(6n+5) .scheme-card {
        background: #f3e5f5;
        border-left-color: #6a1b9a;
    }

    /* 6th scheme */
    .scheme-section .col-sm-12:nth-child(6n+6) .scheme-card {
        background: #ede7f6;
        border-left-color: #4527a0;
    }

</style>
<script>
        const btn = document.getElementById("toggleBtn");
        const text = document.getElementById("tourismText");

        btn.addEventListener("click", () => {
        text.classList.toggle("collapsed");

        btn.textContent = text.classList.contains("collapsed")
        ? "Read More"
        : "Read Less";
        });
</script>

<div class="row">
    <div class="header-wrapper">
  <div class="label-arrow">
    सध्याचे अपडेट्स
  </div>

 <div class="header-bar">
    <div class="scroll-container">
      <div class="scroll-text">
                    सिंधुरत्न हा महाराष्ट्रातील सिंधुदुर्ग व रत्नागिरी (कोकण विभाग) या जिल्ह्यांच्या सर्वांगीण विकासासाठी राबविण्यात येणारा विकास उपक्रम आहे. “सिंधु (सिंधुदुर्ग) + रत्न (रत्नागिरी)” या नावांपासून “सिंधुरत्न” हे नाव तयार झाले आहे.

                    या उपक्रमाचा मुख्य उद्देश म्हणजे स्थानिक नैसर्गिक साधनसंपत्ती, शेती, पर्यटन आणि लघुउद्योग यांच्या आधारे प्रदेशाचा आर्थिक व सामाजिक विकास करणे.
      </div>
    </div>
  </div>
</div>
    <div class="col-sm-4 mt-4">
        <div class="emergency-header">
            <i class="fa-solid fa-triangle-exclamation"></i>
            आपत्कालीन हेल्पलाईन
        </div>

        <div class="emergency-grid">

            <!-- Ambulance -->
            <div class="emergency-card ambulance">
                <div class="icon"><i class="fa-solid fa-ambulance"></i></div>
                <div>
                    <h4>रुग्णवाहिका</h4>
                    <span>102 / 108</span>
                </div>
            </div>

            <!-- Police -->
            <div class="emergency-card police">
                <div class="icon"><i class="fa-solid fa-shield-halved"></i></div>
                <div>
                    <h4>पोलीस</h4>
                    <span>100</span>
                </div>
            </div>

            <!-- Fire -->
            <div class="emergency-card fire">
                <div class="icon"><i class="fa-solid fa-fire-extinguisher"></i></div>
                <div>
                    <h4>अग्निशामक दल</h4>
                    <span>101</span>
                </div>
            </div>

            <!-- Tourist -->
            <div class="emergency-card tourist">
                <div class="icon"><i class="fa-solid fa-headset"></i></div>
                <div>
                    <h4>पर्यटक हेल्पलाईन</h4>
                    <span>1363</span>
                </div>
            </div>

            <!-- Highway -->
            <div class="emergency-card highway">
                <div class="icon"><i class="fa-solid fa-road"></i></div>
                <div>
                    <h4>रस्ता अपघात हेल्पलाईन</h4>
                    <span>1033</span>
                </div>
            </div>

            <!-- National Emergency -->
            <div class="emergency-card national">
                <div class="icon"><i class="fa-solid fa-phone-volume"></i></div>
                <div>
                    <h4>राष्ट्रीय आपत्कालीन</h4>
                    <span>112</span>
                </div>
            </div>

        </div>
        <hr />
        
        <h3 class="text-primary fw-bold mb-4" style="border-bottom: 1px solid #efefef;padding-bottom: 7px;color:rgb(49 118 219) !important;">
            <i class="fa-solid fa-hand-holding-heart me-2"></i> वैशिष्ट्यपूर्ण योजना
        </h3>

        <div class="row scheme-section">
            @foreach (var block in homePage.SelectSchemes)
            {
                var schemeItem = block.Content.Value<IPublishedElement>("selectScheme");

                if (schemeItem != null)
                {
                    var obj = schemeItem as GovernmentScheme;
                    var applyLinks = obj?.ApplyLink?.ToList() ?? new List<Umbraco.Cms.Core.Models.Link>();
                    var applyUrl = applyLinks.FirstOrDefault()?.Url ?? "#";

                    var audiences = obj?.TargetAudience?.ToList() ?? new List<string>();

                    <div class="col-sm-12 col-md-12 col-lg-12 mb-4">
                        <div class="card tourism-card scheme-card h-100 shadow-sm border-0">
                            <div class="card-body d-flex flex-column">



                                @* Scheme Title *@
                                <h5 class="card-title fw-bold text-dark">
                                    @obj?.Name
                                    @* Scheme Type Badge *@
                                    @if (!string.IsNullOrEmpty(obj?.SchemeType))
                                    {
                                        <span class="badge bg-warning text-dark rounded-pill mb-2">
                                            <i class="fa-solid fa-award me-1"></i>@obj.SchemeType
                                        </span>
                                    }
                                </h5>

                                @* Short Description *@
                                            @if (!string.IsNullOrEmpty(obj?.ShortDescription))
                                {
                                    <p class="text-secondary small">
                                        @obj.ShortDescription
                                    </p>
                                }

                                @* Target Audience List *@
                                @if (audiences.Any())
                                {
                                    <p class="text-muted small mb-2">

                                        <i class="fa-solid fa-users me-1"> लाभार्थी:</i>
                                        @string.Join(", ", audiences)
                                    </p>
                                }

                                <div class="d-flex gap-2 mt-2">

                                    @* Apply Button *@
                                            @if (!string.IsNullOrEmpty(applyUrl) && applyUrl != "#")
                                    {
                                        <a href="@applyUrl"
                                           target="_blank"
                                           class="btn btn-sm btn-success">
                                            <i class="fa-solid fa-paper-plane me-1"></i> आता अर्ज करा
                                        </a>
                                    }

                                    @* Read More *@
                                    <a href="/scheme-detail?id=@obj.Id" 
                                       class="btn btn-sm btn-outline-primary">
                                        <i class="fa-solid fa-circle-info me-1"></i> अधिक वाचा
                                    </a>

                                </div>

                            </div>
                        </div>
                    </div>
                }
            }

        </div>

    </div>

    <div class="col-sm-8">
        @Html.Raw(homePage.Description)

        <div class="col-12 mb-3">
            <h3 class="fw-bold mb-4" style="border-bottom: 2px solid #efefef;padding-bottom: 7px;color:rgb(49 118 219) !important;">
                <i class="fa-solid fa-hotel me-2"></i> प्रमुख निवासस्थाने
            </h3>
            <!-- HOTEL GRID -->
            <div class="row g-4">
                @foreach (var block in homePage.SelectHotels)
                {
                    var hotelItem = block.Content.Value<IPublishedElement>("selectHotel");

                    if (hotelItem != null)
                    {
                        var obj = hotelItem as Hotel;
                        var firstImage = obj?.Images?.FirstOrDefault()?.LocalCrops?.Src;

                        <div class="col-md-6">
                            <!-- IMAGE LEFT -->
                            <div class="card h-100 border-0 shadow-sm hotel-card">

                                @if (!string.IsNullOrEmpty(firstImage))
                                {
                                    <a href="/hotel-detail?id=@obj.Id" class="text-dark text-decoration-none">

                                    <img src="@firstImage"
                                         class="card-img-top place-img"
                                         alt="@obj?.HotelName" />
                                    </a>
                                }

                                <div class="card-body d-flex flex-column">

                                    <div>
                                        <span class="badge bg-primary-subtle text-primary mb-2 hotel-badge">
                                            <i class="fa-solid fa-bed me-1"></i>
                                            Hotel
                                        </span>
                                        <h5 class="card-title fw-semibold">
                                            <a href="/hotel-detail?id=@obj.Id" class="text-dark text-decoration-none">
                                            @obj?.HotelName
                                            </a>
                                        </h5>

                                        @if (!string.IsNullOrEmpty(obj?.Address))
                                        {
                                            <p class="text-muted small mb-2">
                                                <i class="fa-solid fa-location-dot me-1 text-dark"></i>
                                                @obj.Address
                                            </p>
                                        }

                                        @if (!string.IsNullOrEmpty(obj?.ContactNumber))
                                        {
                                            <p class="text-muted small mb-3">
                                                <i class="fa-solid fa-phone me-1"></i>
                                                @obj.ContactNumber
                                            </p>
                                        }
                                    </div>


                                    @* Google Maps Button *@
                                    @if (!string.IsNullOrEmpty(obj?.Location))
                                    {
                                        var mapUrl = $"https://www.google.com/maps/search/?api=1&query={obj.Location.Replace(" ", "")}";

                                        <a href="@mapUrl"
                                           target="_blank"
                                           class="btn btn-sm btn-outline-primary mt-auto w-100">
                                            <i class="fa-solid fa-map-location-dot me-1"></i> स्थळ नकाशावर पहा
                                        </a>
                                    }

                                </div>

                            </div>

                            
                            
                        </div>
                        
                    }
                }
           
            </div>
        </div>

    </div>

    <hr />
    
    <div class="row mt-4">
        <h3 class="text-primary fw-bold mb-4" style="border-bottom: 1px solid #efefef;padding-bottom: 7px;color:rgb(49 118 219) !important;">
            <i class="fa-solid fa-map-location-dot me-2"></i>प्रमुख पर्यटनस्थळे
        </h3>

        @foreach (var block in homePage.SelectPlaces)
        {
            var place = block.Content.Value<IPublishedElement>("selectPlace");
            if (place != null)
            {
                var obj = place as TouristPlace;
                var firstImage = obj?.Images?.FirstOrDefault()?.LocalCrops?.Src;

                <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
                    <div class="card border-0 shadow-sm h-100 tourism-card">

                        @* Image Box *@
                        @if (!string.IsNullOrEmpty(firstImage))
                        {
                            <a href="/place-detail?id=@obj.Id" class="text-dark text-decoration-none">
                            <img src="@firstImage"
                                 class="card-img-top place-img"
                                 alt="@obj?.PlaceName" style="width:100%;height:100px;" />
                            </a>
                        }

                        <div class="card-body d-flex flex-column">

                            <div class="place-title mb-2">
                                <h5 class="card-title text-dark fw-semibold m-0">
                                    <a href="/place-detail?id=@obj.Id" class="text-dark text-decoration-none">
                                    @obj?.PlaceName
                                    </a>
                                </h5>

                                @if (!string.IsNullOrEmpty(obj?.PlaceType))
                                {
                                    <span class="badge bg-success rounded-pill place-badge">
                                        <i class="fa-solid fa-location-dot me-1"></i>@obj?.PlaceType
                                    </span>
                                }
                            </div>

                            <p class="card-text text-secondary small flex-grow-1">
                                @Html.Raw(obj?.ShortDescription)
                            </p>

                            @if (!string.IsNullOrEmpty(obj?.Location))
                            {
                                <a href="https://www.google.com/maps/search/?api=1&query=@obj.Location.Replace(" ", "")"
                                   target="_blank"
                                   class="btn btn-sm btn-outline-primary mt-2 w-100">
                                    <i class="fa-solid fa-map-location-dot me-1"></i> स्थळ नकाशावर पहा
                                </a>
                            }

                        </div>
                    </div>
                </div>
            }
        }
    </div>


</div>
