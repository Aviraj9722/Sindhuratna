@inject Umbraco.Cms.Core.IPublishedContentQuery ContentQuery
@{
    var root = ContentQuery.ContentAtRoot().FirstOrDefault();
    // var homePage = root as Root;

    // Read district from query parameter: ?district=sindhudurg
    var districtSlug = Context.Request.Query["district"].ToString()?.ToLower();

    District districtPage = null;

    if (!string.IsNullOrEmpty(districtSlug))
    {

        // Get the 'Sindhudurg' page from children of root
        var Page = root.Children.Where(x => x.Name.Trim().ToLower() == districtSlug.Trim().ToLower()).FirstOrDefault();

        districtPage = Page as District;
    }

   
}
@{
    Layout = "~/Views/Shared/_SindhuratnLayout.cshtml";
}

<style>
    .image-box {
        overflow: hidden;
        border-radius: 8px;
        width: 100%;
        height: 125px;
    }

    .zoom-image {
        transition: transform .4s ease, filter .4s ease;
        cursor: pointer;
    }

        .zoom-image:hover {
            transform: scale(1.12);
            filter: brightness(1.15);
        }

    /* ================= IMAGE MODAL CLOSE BUTTON ================= */

    /* ===== IMAGE MODAL SAFE FIT ===== */

    .modal-dialog {
        max-width: 90vw;
    }

 /*    .modal-content {
        background: transparent;
        border: none;
        display: flex;
        align-items: center;
        justify-content: center;
    }
 */
    /* IMAGE NEVER EXCEEDS SCREEN */
    /* FULLSCREEN MODAL CONTAINER */
    .img-modal {
        display: none;
        position: fixed; /* KEY: makes it fullscreen */
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background: rgba(0,0,0,0.9);
        z-index: 999999;
        align-items: center;
        justify-content: center;
    }

    /* IMAGE INSIDE MODAL */
    .modal-img {
        max-width: 95vw;
        max-height: 85vh;
        object-fit: contain;
        border-radius: 10px;
    }

    .close-btn {
        position: fixed; /* FIX: stick to screen, not image */
        right: 22px;
        font-size: 40px;
        color: #ffffff;
        font-weight: bold;
        cursor: pointer;
        z-index: 1000001;
        background: rgba(0,0,0,0.55);
        width: 46px;
        height: 46px;
        border-radius: 50%;
        display: flex !important;
        align-items: center;
        justify-content: center;
        line-height: 1;
    }

        .close-btn:hover {
            background: rgba(255,255,255,0.25);
            transform: scale(1.08);
        }


   


</style>

@if (districtPage != null)
{
    <!-- Hero Section -->
    <section class="hero-section position-relative">
        <img src="@districtPage.HeroImage?.LocalCrops?.Src"
             class="w-100"
             style="height: 60vh; object-fit: cover;" alt="Sindhudurg Hero">

        <div class="hero-overlay position-absolute top-50 start-50 translate-middle text-center text-white" style="text-shadow: 2px 2px 14px #000000;">
            <h1 class="fw-bold display-4">@districtPage.DistrictName</h1>
            <h3 class="lead mt-4">@Html.Raw(districtPage.ShortDescription)</h3>
        </div>
    </section>

    <!-- Main Content Section -->
    <section class="container my-2">
        <div class="row">
            <div class="col-sm-4 mb-4">
                <!-- 1 Conatcts -->
                <section>
                    <div class="mt-5">
                        <div class="card shadow-sm border-0">
                            <div class="card-header bg-warning text-dark fw-bold" style="font-size: 18px;">
                                <i class="fa-solid fa-triangle-exclamation me-2"></i>
                                आपत्कालीन संपर्क
                            </div>

                            <div class="card-body">
                                <ul class="list-group">

                                    <!-- Police -->
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <span>
                                            <i class="fa-solid fa-shield-halved me-2 text-primary"></i>
                                            पोलीस
                                        </span>
                                        <span class="fw-bold text-dark">@districtPage.PoliceContact</span>
                                    </li>

                                    <!-- Hospital -->
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <span>
                                            <i class="fa-solid fa-hospital me-2 text-success"></i>
                                            रुग्णालय
                                        </span>
                                        <span class="fw-bold text-dark">@districtPage.HospitalContact</span>
                                    </li>

                                    <!-- Tourism Office -->
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <span>
                                            <i class="fa-solid fa-building me-2 text-warning"></i>
                                            पर्यटन कार्यालय
                                        </span>
                                        <span class="fw-bold text-dark">@districtPage.TourismOfficeContact</span>
                                    </li>

                                </ul>
                            </div>
                        </div>
                    </div>

                </section>
                <!-- 5 Nearest Tourist Places -->

                <h3 class="text-primary fw-bold mb-4 mt-4" style="color: rgb(49 118 219) !important; ">
                        <i class="fa-solid fa-map-location-dot me-2"></i> प्रमुख पर्यटनस्थळे
                    </h3>
                   
                     

                        <div class="col-sm-12 mt-1">

                    @foreach (var block in districtPage.SelectPlaces)
                    {
                        var place = block.Content.Value<IPublishedElement>("selectPlace");
                        if (place != null)
                        {
                            var obj = place as TouristPlace;
                            var firstImage = obj?.Images?.FirstOrDefault()?.LocalCrops?.Src;

                            <div class="col-sm-12 mb-4">
                                <div class="card border-0 shadow-sm h-100 tourism-card">

                                    @* Image Box *@
                                    @if (!string.IsNullOrEmpty(firstImage))
                                    {
                                        <img src="@firstImage"
                                             class="card-img-top place-img"
                                             alt="@obj?.PlaceName" style="width:100%;height:100px;" />
                                    }

                                    <div class="card-body d-flex flex-column">



                                        <h5 class="card-title text-dark fw-semibold mb-2">
                                            @obj?.PlaceName <span class="badge bg-success rounded-pill mb-2">
                                                <i class="fa-solid fa-location-dot me-1"></i>@obj?.PlaceType
                                            </span>
                                        </h5>

                                        <p class="card-text text-secondary small flex-grow-1">
                                            @Html.Raw(obj?.ShortDescription)
                                        </p>

                                        @if (!string.IsNullOrEmpty(obj?.Location))
                                        {
                                            <a href="https://www.google.com/maps/search/?api=1&query=@obj.Location.Replace(" ", "")"
                                               target="_blank"
                                               class="btn btn-sm btn-outline-primary mt-2 w-100">
                                                <i class="fa-solid fa-map-location-dot me-1"></i> स्थळ नकाशावर पहा
                                            </a>
                                        }

                                    </div>
                                </div>
                            </div>
                        }
                    }

                         
                        
                        </div>

                 
               
            </div>
          
            <!-- Right 70%: Long Description -->
            <div class="col-lg-8">
                <div class="rich-description text-secondary">
                    @Html.Raw(districtPage.Description)
                </div>
            </div>
        </div>
    </section>

    <hr />

    <!-- 5 Nearest Hotels / Stay -->
    <section class="container my-2">
        <h3 class="text-primary fw-bold mb-4" style="color: rgb(49 118 219) !important;">
            <i class="fa-solid fa-hotel me-2" style="color: rgb(49 118 219) !important;"></i> जवळपासची निवासस्थाने
        </h3>
        <div class="row">


            @foreach (var block in districtPage.SelectHotels)
            {
                var hotelItem = block.Content.Value<IPublishedElement>("selectHotel");

                if (hotelItem != null)
                {
                    var obj = hotelItem as Hotel;
                    var firstImage = obj?.Images?.FirstOrDefault()?.LocalCrops?.Src;

                    <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
                        <div class="card tourism-card h-100 shadow-sm">

                            @if (!string.IsNullOrEmpty(firstImage))
                            {
                                <img src="@firstImage"
                                     class="card-img-top place-img"
                                     alt="@obj?.HotelName" />
                            }

                            <div class="card-body d-flex flex-column">

                                <span style="width:70px;" class="badge bg-info rounded-pill mb-2">
                                    <i class="fa-solid fa-bed me-1"></i> Hotel
                                </span>

                                <h5 class="card-title fw-bold text-dark mb-2">

                                    @obj?.HotelName
                                </h5>

                                @if (!string.IsNullOrEmpty(obj?.Address))
                                {
                                    <p class="card-text small text-secondary mb-1">
                                        <i class="fa-solid fa-location-dot me-1"></i>@obj.Address
                                    </p>
                                }

                                @if (!string.IsNullOrEmpty(obj?.ContactNumber))
                                {
                                    <p class="card-text small text-secondary m-0">
                                        <i class="fa-solid fa-phone me-1"></i>@obj.ContactNumber
                                    </p>
                                }

                                @* Google Maps Button *@
                                @if (!string.IsNullOrEmpty(obj?.Location))
                                {
                                    var mapUrl = $"https://www.google.com/maps/search/?api=1&query={obj.Location.Replace(" ", "")}";

                                    <a href="@mapUrl"
                                       target="_blank"
                                       class="btn btn-sm btn-outline-primary mt-3 w-100">
                                        <i class="fa-solid fa-map-location-dot me-1"></i> स्थळ नकाशावर पहा
                                    </a>
                                }

                            </div>
                        </div>
                    </div>
                }
            }


        </div>
    </section>
    <hr/>
    <!-- 5 Nearest Hotels / Stay -->
    <section class="container my-2">
        <h3 class="text-primary fw-bold mb-4" style="color: rgb(49 118 219) !important;">
            <i class="fa-solid fa-hand-holding-heart me-2" style="color: rgb(49 118 219) !important;"></i>  वैशिष्ट्यपूर्ण योजना
        </h3>
        <div class="row">

            @foreach (var block in districtPage.SelectSchemes)
            {
                var schemeItem = block.Content.Value<IPublishedElement>("selectScheme");

                if (schemeItem != null)
                {
                    var obj = schemeItem as GovernmentScheme;
                    var applyLinks = obj?.ApplyLink?.ToList() ?? new List<Umbraco.Cms.Core.Models.Link>();
                    var applyUrl = applyLinks.FirstOrDefault()?.Url ?? "#";

                    var audiences = obj?.TargetAudience?.ToList() ?? new List<string>();

                    <div class="col-sm-3 col-md-3 col-lg-3 mb-4">
                        <div class="card tourism-card h-100 shadow-sm border-0" style="border: 1px solid #e7e1e1 !important;">
                            <div class="card-body d-flex flex-column">



                                @* Scheme Title *@
                                <h5 class="card-title fw-bold text-dark">
                                    @obj?.Name
                                    @* Scheme Type Badge *@
                                    @if (!string.IsNullOrEmpty(obj?.SchemeType))
                                    {
                                        <span class="badge bg-warning text-dark rounded-pill mb-2">
                                            <i class="fa-solid fa-award me-1"></i>@obj.SchemeType
                                        </span>
                                    }
                                </h5>

                                @* Short Description *@
                                @if (!string.IsNullOrEmpty(obj?.ShortDescription))
                                {
                                    <p class="text-secondary small">
                                        @obj.ShortDescription
                                    </p>
                                }

                                @* Target Audience List *@
                                @if (audiences.Any())
                                {
                                    <p class="text-muted small mb-2">

                                        <i class="fa-solid fa-users me-1"> लाभार्थी:</i>
                                        @string.Join(", ", audiences)
                                    </p>
                                }

                                <div class="d-flex gap-2 mt-2">

                                    @* Apply Button *@
                                    @if (!string.IsNullOrEmpty(applyUrl) && applyUrl != "#")
                                    {
                                        <a href="@applyUrl"
                                           target="_blank"
                                           class="btn btn-sm btn-success">
                                            <i class="fa-solid fa-paper-plane me-1"></i> आता अर्ज करा
                                        </a>
                                    }

                                    @* Read More *@
                                    <a href="@obj?.ApplyLink"
                                       class="btn btn-sm btn-outline-primary">
                                        <i class="fa-solid fa-circle-info me-1"></i> अधिक वाचा
                                    </a>

                                </div>

                            </div>
                        </div>
                    </div>
                }
            }


        </div>
    </section>


    <hr />
    <section class="container my-2">
        <h3 class="text-primary fw-bold mb-4" style="color: rgb(49 118 219) !important;">
            <i class="fa-solid fa-camera me-2" style="color: rgb(49 118 219) !important;"></i> फोटो गॅलरी
        </h3>
    <!-- Additional Images -->
        <div class="col-lg-12 col-sm-6 mb-4">
        <div class="row g-2">
            @foreach (var img in districtPage.SelectImages.Take(12))
            {
                var fullImg = img?.MediaUrl();
                <div class="col-sm-3">
                    <div class="image-box">
                        <img src="@img.LocalCrops.Src"
                             data-full="@fullImg"
                             class="img-fluid rounded shadow-sm zoom-image"
                                 alt="@img.LocalCrops.TemporaryFileId">
                    </div>
                        @img.LocalCrops.TemporaryFileId
                </div>
            }
        </div>
    </div>

    <!-- Full Image Modal -->
        <div id="imgModal" class="img-modal" onclick="closeImage()">
            <span class="close-btn" onclick="closeImage(event)">&times;</span>

            <div class="modal-content-wrapper" onclick="event.stopPropagation()">
                <img id="modalImg" class="modal-img" />
                <div class="modal-thumbs" id="modalThumbs"></div>
            </div>
        </div>


    </section>

   

}

@section Scripts {
    <script>

        document.querySelectorAll('.zoom-image').forEach(img => {
            img.addEventListener('click', function () {

                const fullImg = this.getAttribute('data-full');

                // SHOW modal
                document.getElementById("imgModal").style.display = "flex";

                // SET image
                document.getElementById("modalImg").src = fullImg;
            });
        });

        function closeImage(event) {
            if (event) event.stopPropagation();
            document.getElementById("imgModal").style.display = "none";
        }

    </script>
}
